# Celebrum AI Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=development

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database Configuration
# For local development
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_DBNAME=celebrum_ai
DATABASE_SSLMODE=disable

# For Digital Ocean managed database (preferred for production)
# Use this instead of individual database settings above
# Format: postgres://username:password@host:port/dbname?sslmode=require
DATABASE_URL=

# Database connection pool settings
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5
DATABASE_CONN_MAX_LIFETIME=300s
DATABASE_CONN_MAX_IDLE_TIME=60s

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CCXT Service Configuration
CCXT_SERVICE_URL=http://localhost:3001
CCXT_TIMEOUT=30s

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_COST=12

# External API Keys
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FEATURE_TELEGRAM_BOT=true
FEATURE_WEB_INTERFACE=true
FEATURE_REAL_TRADING=false
FEATURE_PAPER_TRADING=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Market Data Configuration
MARKET_DATA_COLLECTION_INTERVAL=30s
MARKET_DATA_BATCH_SIZE=100

# Arbitrage Configuration
ARBITRAGE_MIN_PROFIT_THRESHOLD=0.5
ARBITRAGE_MAX_TRADE_AMOUNT=1000.0
ARBITRAGE_CHECK_INTERVAL=10s

# Technical Analysis Configuration
TA_CALCULATION_INTERVAL=60s