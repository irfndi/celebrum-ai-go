# Celebrum AI Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=development

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database Configuration
# For local development
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
# SECURITY: Change this password in production - never use default passwords
DATABASE_PASSWORD=your-secure-database-password-here
DATABASE_DBNAME=celebrum_ai
DATABASE_SSLMODE=disable

# PostgreSQL Docker Container Configuration
# These are used by docker-compose.yml for the postgres service
# SECURITY: Use strong passwords in production environments
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-secure-postgres-password-here
POSTGRES_DB=celebrum_ai

# For Digital Ocean managed database (preferred for production)
# Use this instead of individual database settings above
# Format: postgres://username:password@host:port/dbname?sslmode=require
DATABASE_URL=

# Database connection pool settings
DATABASE_MAX_OPEN_CONNS=25
DATABASE_MAX_IDLE_CONNS=5
DATABASE_CONN_MAX_LIFETIME=300s
DATABASE_CONN_MAX_IDLE_TIME=60s

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# CCXT Service Configuration
CCXT_SERVICE_URL=http://localhost:3001
CCXT_TIMEOUT=30s
PORT=3001

# Telegram Bot Configuration (services/telegram-service)
# --------------------------------------------------------
# TELEGRAM_BOT_TOKEN: Get this from @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
# TELEGRAM_WEBHOOK_URL: Public URL for webhook mode (production)
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook
# TELEGRAM_WEBHOOK_SECRET: Secret to validate incoming webhook requests
# SECURITY: Generate with: openssl rand -base64 32
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
# TELEGRAM_USE_POLLING: Set to 'true' for development, 'false' for production webhook mode
TELEGRAM_USE_POLLING=true
# TELEGRAM_WEBHOOK_PATH: Path for the webhook endpoint
TELEGRAM_WEBHOOK_PATH=/telegram/webhook
# TELEGRAM_PORT: Port for the Telegram service
TELEGRAM_PORT=3002
# TELEGRAM_API_BASE_URL: URL of the backend-api service for Telegram to call
TELEGRAM_API_BASE_URL=http://localhost:8080
# RUN_TELEGRAM_SERVICE: Enable/disable the Telegram service
RUN_TELEGRAM_SERVICE=true
# TELEGRAM_EXTERNAL_SERVICE: Set to 'true' to use the external TypeScript Telegram service
# When 'true', disables the legacy Go-based Telegram bot
TELEGRAM_EXTERNAL_SERVICE=true

# Security Configuration
# SECURITY: Generate a strong, random JWT secret (minimum 32 characters)
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
BCRYPT_COST=12

# Admin API Key for securing admin endpoints
# SECURITY: Generate a strong, unique API key for production
# Use: openssl rand -base64 32
ADMIN_API_KEY=your-secure-admin-api-key-here

# Test Environment Variables (for development/testing only)
# These should not be used in production
TEST_JWT_SECRET=test-jwt-secret-for-development-only
TEST_DB_PASSWORD=test-db-password-for-development-only

# External API Keys
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json

# Feature Flags
FEATURE_TELEGRAM_BOT=true
FEATURE_WEB_INTERFACE=true
FEATURE_REAL_TRADING=false
FEATURE_PAPER_TRADING=true

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090

# Market Data Configuration
MARKET_DATA_COLLECTION_INTERVAL=30s
MARKET_DATA_BATCH_SIZE=100

# Arbitrage Configuration
ARBITRAGE_MIN_PROFIT_THRESHOLD=0.5
ARBITRAGE_MAX_TRADE_AMOUNT=1000.0
ARBITRAGE_CHECK_INTERVAL=10s

# Technical Analysis Configuration
TA_CALCULATION_INTERVAL=60s
