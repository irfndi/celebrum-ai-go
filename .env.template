# Celebrum AI Environment Variables Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# =============================================================================
# Application Environment
# =============================================================================
ENVIRONMENT=development
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout
LOG_FILE_PATH=logs/app.log

# =============================================================================
# Server Configuration
# =============================================================================
SERVER_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080,http://127.0.0.1:3000,http://127.0.0.1:8080
SERVER_HOST=0.0.0.0
SERVER_IDLE_TIMEOUT=60s
SERVER_PORT=8080
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s

# =============================================================================
# Database Configuration
# =============================================================================
# Option 1: Individual settings (preferred for development)
DATABASE_DBNAME=celebrum_ai
DATABASE_HOST=localhost
DATABASE_PASSWORD=your_database_password_here
DATABASE_PORT=5432
DATABASE_SSLMODE=disable
DATABASE_USER=postgres

# Option 2: Database URL (preferred for production)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Connection pool settings
DATABASE_CONN_MAX_IDLE_TIME=60s
DATABASE_CONN_MAX_LIFETIME=300s
DATABASE_MAX_IDLE_CONNS=5
DATABASE_MAX_OPEN_CONNS=25

# =============================================================================
# Redis Configuration
# =============================================================================
REDIS_DB=0
REDIS_DIAL_TIMEOUT=5s
REDIS_HOST=localhost
REDIS_IDLE_TIMEOUT=300s
REDIS_MIN_IDLE_CONNS=5
REDIS_PASSWORD=
REDIS_POOL_SIZE=10
REDIS_POOL_TIMEOUT=4s
REDIS_PORT=6379
REDIS_READ_TIMEOUT=3s
REDIS_WRITE_TIMEOUT=3s

# =============================================================================
# CCXT Service Configuration
# =============================================================================
CCXT_RATE_LIMIT_BURST=20
CCXT_RATE_LIMIT_RPS=10
CCXT_RETRY_ATTEMPTS=3
CCXT_RETRY_DELAY=1s
CCXT_SERVICE_URL=http://localhost:8081
CCXT_TIMEOUT=30s

# =============================================================================
# Telegram Bot Configuration
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_TIMEOUT=30s
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here
TELEGRAM_WEBHOOK_URL=https://your-domain.com/api/v1/telegram/webhook

# =============================================================================
# Market Data Configuration
# =============================================================================
MARKET_DATA_BATCH_SIZE=500
MARKET_DATA_COLLECTION_INTERVAL=90s
MARKET_DATA_EXCHANGES=binance,coinbase,kraken,bitfinex,huobi,bybit
MARKET_DATA_MAX_RETRIES=3
MARKET_DATA_TIMEOUT=15s

# =============================================================================
# Arbitrage Configuration
# =============================================================================
ARBITRAGE_CHECK_INTERVAL=2m
ARBITRAGE_MAX_TRADE_AMOUNT=1000.0
ARBITRAGE_MIN_PROFIT_THRESHOLD=0.5

# =============================================================================
# Technical Analysis Configuration
# =============================================================================
TECHNICAL_ANALYSIS_CALCULATION_INTERVAL=60s
TECHNICAL_ANALYSIS_INDICATORS=RSI,MACD,SMA,EMA,BOLLINGER_BANDS
TECHNICAL_ANALYSIS_TIMEFRAMES=1m,5m,15m,1h,4h,1d

# =============================================================================
# Security Configuration
# =============================================================================
BCRYPT_COST=12
JWT_EXPIRY=24h
# Use a long, high-entropy secret (e.g., at least 32 characters with a mix of letters, numbers, and symbols)
JWT_SECRET=your_jwt_secret_here_change_in_production
SECURITY_RATE_LIMIT_BURST=200
SECURITY_RATE_LIMIT_RPM=100

# =============================================================================
# Monitoring Configuration
# =============================================================================
HEALTH_CHECK_INTERVAL=30s
METRICS_ENABLED=true
METRICS_PORT=9090
PROMETHEUS_ENABLED=true
PROMETHEUS_PATH=/metrics

# =============================================================================
# Feature Flags
# =============================================================================
FEATURE_API_V1=true
FEATURE_PAPER_TRADING=true
FEATURE_REAL_TRADING=false
FEATURE_TELEGRAM_BOT=true
FEATURE_WEB_INTERFACE=true

# =============================================================================
# External APIs Configuration
# =============================================================================
COINGECKO_BASE_URL=https://api.coingecko.com/api/v3
COINGECKO_RATE_LIMIT=50
COINGECKO_TIMEOUT=10s

COINMARKETCAP_API_KEY=your_coinmarketcap_api_key_here
COINMARKETCAP_BASE_URL=https://pro-api.coinmarketcap.com/v1
COINMARKETCAP_RATE_LIMIT=333
COINMARKETCAP_TIMEOUT=10s

# =============================================================================
# Docker Configuration (for docker-compose)
# =============================================================================
# These are used in docker-compose.yml to ensure consistent service names
POSTGRES_DB=celebrum_ai
POSTGRES_PASSWORD=your_postgres_password_here
POSTGRES_USER=postgres

