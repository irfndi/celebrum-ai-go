{
  "name": "ccxt-service",
  "version": "1.0.0",
  "description": "CCXT service for cryptocurrency exchange data",
  "main": "./dist/index.js",
  "scripts": {
    "start": "node --require ./dist/tracing.js ./dist/index.js",
    "start:bun": "bun run --preload ./tracing.js index.ts",
    "dev": "npm run build && node --require ./dist/tracing.js --watch ./dist/index.js",
    "dev:bun": "bun --watch index.ts",
    "build": "tsc && mkdir -p dist/ && cp tracing-utils.js dist/tracing.js",
    "build:bun": "bun build index.ts --outdir ./dist --target node",
    "test": "bun test"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.5",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.65.0",
    "@opentelemetry/exporter-otlp-http": "^0.26.0",
    "@opentelemetry/instrumentation": "^0.206.0",
    "@opentelemetry/instrumentation-express": "^0.55.0",
    "@opentelemetry/instrumentation-fs": "^0.26.0",
    "@opentelemetry/instrumentation-http": "^0.206.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-node": "^0.206.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "ccxt": "^4.5.6",
    "hono": "^4.10.3",
    "http-proxy-agent": "^7.0.2",
    "socks-proxy-agent": "^8.0.5"
  },
  "devDependencies": {
    "@types/bun": "^1.2.23",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "ccxt",
    "cryptocurrency",
    "exchange",
    "trading",
    "api"
  ],
  "author": "Celebrum AI",
  "license": "MIT"
}
