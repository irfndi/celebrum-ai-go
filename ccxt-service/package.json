{
  "name": "ccxt-service",
  "version": "1.0.0",
  "description": "CCXT service for cryptocurrency exchange data",
  "main": "index.ts",
  "scripts": {
    "start": "bun run index.ts",
    "dev": "bun --watch index.ts",
    "build": "bun build index.ts --outdir ./dist --target node",
    "test": "bun test",
    "lint": "bunx tsc --noEmit && bunx oxlint . --ignore-pattern dist/",
    "format": "bunx oxlint . --fix --ignore-pattern dist/",
    "format-check": "bunx oxlint . --ignore-pattern dist/"
  },
  "dependencies": {
    "ccxt": "^4.4.99",
    "hono": "^4.9.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "oxlint": "^1.11.1",
    "typescript": "^5.9.2"
  },
  "keywords": [
    "ccxt",
    "cryptocurrency",
    "exchange",
    "trading",
    "api"
  ],
  "author": "Celebrum AI",
  "license": "MIT"
}