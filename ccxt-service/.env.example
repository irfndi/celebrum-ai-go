# CCXT Service Configuration
PORT=3001
NODE_ENV=production

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Admin API Key for securing admin endpoints
# SECURITY: Set this environment variable - never use default values in production!
# ADMIN_API_KEY=your-secure-admin-api-key-here

# Exchange API Keys (Optional - for private endpoints)
# BINANCE_API_KEY=
# BINANCE_SECRET=
# BYBIT_API_KEY=
# BYBIT_SECRET=
# OKX_API_KEY=
# OKX_SECRET=
# OKX_PASSPHRASE=
# COINBASE_API_KEY=
# COINBASE_SECRET=
# COINBASE_PASSPHRASE=
# KRAKEN_API_KEY=
# KRAKEN_SECRET=

# Logging
LOG_LEVEL=info

# CORS
CORS_ORIGIN=*

# Request Timeout (ms)
REQUEST_TIMEOUT=30000